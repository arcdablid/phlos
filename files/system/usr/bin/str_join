#!/usr/bin/env python

import argparse


def str_join():

    parser = argparse.ArgumentParser(
        description="Join input strings by provided delimiter and return result.",
        formatter_class=argparse.RawDescriptionHelpFormatter,
    )

    parser.add_argument(
        "-d",
        "--delimiter",
        required=True,
        type=str,
        help="the character or string to cut with/by",
    )

    parser.add_argument(
        "strings",
        metavar="S",
        type=str,
        nargs="+",
        help="Strings to join.",
    )

    parser.add_argument(
        "-q",
        "--quote",
        action="store_true",
        help="Print in quotes to see spaces.",
    )

    args = parser.parse_args()

    if args.quote:
        print(f"\'{args.delimiter.join(args.strings)}\'")
    else:
        print(args.delimiter.join(args.strings))


if __name__ == "__main__":
    str_join()
