#!/usr/bin/env python

import argparse
import shutil


def print_divider():
    parser = argparse.ArgumentParser(
        description="Print a line ",
        formatter_class=argparse.RawDescriptionHelpFormatter,
    )

    parser.add_argument(
        "-f",
        "--filler",
        default="-",
        type=str,
        help="The character(s) to use to form the line. Defaults to '-'.",
    )

    parser.add_argument(
        "-r",
        "--repetitions",
        default=shutil.get_terminal_size().columns,
        type=int,
        help="Length of the line. Defaults to width of terminal window or 80 if that's irretrievable.",
    )

    args = parser.parse_args()

    print(f"\n{args.filler*args.repetitions}\n")


if __name__ == "__main__":
    print_divider()
