#!/usr/bin/env python

import argparse
import pathlib


def expand_path():
    parser = argparse.ArgumentParser(
        description="Normalize input paths.",
        formatter_class=argparse.RawDescriptionHelpFormatter,
    )

    parser.add_argument(
        "paths",
        metavar="P",
        type=str,
        nargs="+",
        help="Path to file/folder.",
    )

    args = parser.parse_args()

    for p in args.paths:
        p = pathlib.Path(p).expanduser().resolve()
        print(str(p))


if __name__ == "__main__":
    expand_path()
